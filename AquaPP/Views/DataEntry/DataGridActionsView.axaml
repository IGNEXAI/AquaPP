<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:dataEntry="clr-namespace:AquaPP.ViewModels.DataEntry"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AquaPP.Views.DataEntry.DataGridActionsView">
    
    <Design.DataContext>
        <dataEntry:DataGridActionsViewModel />
    </Design.DataContext>
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Spacing="10">
        <Button Content="Save" />
        <Button  Classes="Flat Accent" >
            <Button.Content>
                <i:Icon Value="fa-solid fa-floppy-disk"></i:Icon>
            </Button.Content>
        </Button>
        <!--<Button Content="Import" ToolTip.Tip="Import from csv" Command="{Binding ImportReadingsCommand}">
                <Button.CommandParameter>
                    <Binding RelativeSource="{RelativeSource Self}" />
                </Button.CommandParameter>
            </Button>-->
    </StackPanel>
</UserControl>