<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AquaPP.Views.DataEntry.DataGridView">

    
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader StackPanel TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="DataGridColumnHeader StackPanel i|Icon">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Width" Value="25" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Foreground" Value="{DynamicResource HeaderIcon}" />
        </Style>
        <Style Selector="DataGridTextColumn">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <DataGrid
            x:Name="MainDataGrid"
            CanUserResizeColumns="True"
            AutoGenerateColumns="False"
            IsReadOnly="False"
            SelectionMode="Extended"
            SelectionChanged="OnDataGridSelectionChanged"
            HeadersVisibility="Column"
            GridLinesVisibility="All"
            PointerPressed="DataGridPointerPressed"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">

            <!-- IsReadOnly="{Binding EditModeEnabled}" -->
            <DataGrid.Columns>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="No readings found for the selected date."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"
                   FontWeight="Bold"
                   IsVisible="True" />
    </Grid>
</UserControl>