<sukiUi:SukiWindow xmlns="https://github.com/avaloniaui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:vm="using:AquaPP.ViewModels"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:views="clr-namespace:AquaPP.Views"
                   xmlns:i="https://github.com/projektanker/icons.avalonia"
                   mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="650"
                   x:Class="AquaPP.Views.MainWindow"
                   x:DataType="vm:CustomSplitViewModel"
                   Icon="/Assets/avalonia-logo.ico"
                   Title="AquaPP">
    <sukiUi:SukiWindow.TitleBarContextMenu>
        <ContextMenu>
            <MenuItem Header="Custom TitleBar Context Menu Item" />
        </ContextMenu>
    </sukiUi:SukiWindow.TitleBarContextMenu>
    <sukiUi:SukiWindow.LogoContent>
        <i:Icon Width="20"
                               Height="20"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SukiPrimaryColor}"
                               Value="fa-solid fa-droplet">
            <i:Icon.Transitions>
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="{DynamicResource ShortAnimationDuration}" />
                </Transitions>
            </i:Icon.Transitions>
        </i:Icon>
    </sukiUi:SukiWindow.LogoContent>
    
    <Panel>
        <Grid Margin="20" RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*">
            <TextBlock Grid.Row="0" Text="Welcome to the Dashboard" FontSize="24" FontWeight="Bold" />
            <TextBlock Grid.Row="1" Text="Here is the user information:" />

            <views:CustomSplitView Grid.Row="2" Grid.RowSpan="10" />

        </Grid>
        
        <StackPanel Name="ToastContainer"
                    Spacing="10"
                    Orientation="Vertical"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="20"
                    MaxWidth="350"/>
    </Panel>
</sukiUi:SukiWindow>