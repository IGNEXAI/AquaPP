<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:AquaPP.ViewModels.Pages"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AquaPP.Views.Pages.DataEntryView"
             x:DataType="pages:DataEntryViewModel">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key='Light'>
                    <SolidColorBrush x:Key='HeaderIcon'>DodgerBlue</SolidColorBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key='Dark'>
                    <SolidColorBrush x:Key='HeaderIcon'>White</SolidColorBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader StackPanel TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="DataGridColumnHeader StackPanel i|Icon">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Width" Value="25" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Foreground" Value="{DynamicResource HeaderIcon}" />
        </Style>
        <Style Selector="DataGridTextColumn">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </UserControl.Styles>
    
    <Design.DataContext>
        <pages:DataEntryViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <Border Grid.Row="0" Margin="0 0 0 10" Padding="15" HorizontalAlignment="Stretch">
            <Grid ColumnDefinitions="*,*,*" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBlock Grid.Column="0" Text="Water Quality Data Entry" FontWeight="Bold" FontSize="20"
                           VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <!--<Button Command="{Binding ToggleEditModeCommand}" HorizontalAlignment="Left" Background="{Binding EditModeEnabled, Converter={StaticResource EditModeToIconColorConverterInstance}}">
                        <Svg HorizontalAlignment="Center" Path="/Assets/edit-button-svgrepo-com(2).svg" Width="20" Height="20"/> 
                    </Button>-->
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Date: " VerticalAlignment="Center" />
                    <CalendarDatePicker SelectedDate="{Binding CurrentDate, Mode=TwoWay}"
                                        CustomDateFormatString="MMMM dd, yyyy">
                        <Interaction.Behaviors>
                            <EventTriggerBehavior EventName="SelectedDateChanged">
                                <InvokeCommandAction Command="{Binding SelectedDateChangedCommand}" />
                            </EventTriggerBehavior>
                        </Interaction.Behaviors>
                    </CalendarDatePicker>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderThickness="2" BorderBrush="{DynamicResource DataGridBorder}" CornerRadius="5">
            <DataGrid
                ItemsSource="{Binding Readings}"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                IsReadOnly="False"
                HeadersVisibility="Column"
                GridLinesVisibility="All"
                ColumnHeaderHeight=""
                PointerPressed="DataGridPointerPressed"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">

                <!-- IsReadOnly="{Binding EditModeEnabled}" -->
                <DataGrid.Columns>
                    <DataGridTextColumn
                        FontWeight="Bold"
                        FontSize="13"
                        Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                        Width="180">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-clock" />
                                <TextBlock Text="Timestamp" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn FontWeight="Bold"
                                        FontSize="13"
                                        Binding="{Binding Location}" Width="*" MinWidth="100">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-map-marker-alt" />
                                <TextBlock Text="Location" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn FontWeight="Bold"
                                        FontSize="13"
                                        Binding="{Binding PH}" Width="80">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-flask" />
                                <TextBlock Text="pH" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn FontWeight="Bold"
                                        FontSize="13"
                                        Binding="{Binding Conductivity}" Width="120">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-bolt" />
                                <TextBlock Text="Conductivity (ÂµS/cm)" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn FontWeight="Bold"
                                        FontSize="13"
                                        Binding="{Binding Turbidity}" Width="110">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-cloud"/>
                                <TextBlock Text="Turbidity (NTU)" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn FontWeight="Bold"
                                        FontSize="13"
                                        Binding="{Binding ChlorineResidual}" Width="150">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-vial"/>
                                <TextBlock Text="Chlorine Residual (mg/L)" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn FontWeight="Bold"
                                        FontSize="13"
                                        Binding="{Binding Notes}" Width="*" MinWidth="150">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <i:Icon Value="fa-solid fa-clipboard" />
                                <TextBlock Text="Notes" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Spacing="10">
            <Button Content="Add Row" Command="{Binding AddBlankReadingRowCommand}" />
            <Button Content="Save All Readings" Command="{Binding SaveReadingsCommand}" />
            <Button Content="Load All Current Day Readings" Command="{Binding LoadCurrentDateReadingsCommand}" />
            <Button Content="Load All Readings" Command="{Binding LoadAllReadingsCommand}" />
        </StackPanel>
    </Grid>

</UserControl>