<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:AquaPP.ViewModels.Pages"
             xmlns:visualBasic="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AquaPP.Views.Pages.DataEntryView"
             x:DataType="pages:DataEntryViewModel">
    
    <Design.DataContext>
        <pages:DataEntryViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <Border Grid.Row="0" Margin="0 0 0 10" Padding="15" HorizontalAlignment="Stretch" >
            <Grid ColumnDefinitions="*,*,*" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBlock Grid.Column="0" Text="Water Quality Data Entry" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" />
                <StackPanel  Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Command="{Binding ToggleEditModeCommand}" HorizontalAlignment="Left">
                        <Svg HorizontalAlignment="Center" Path="/Assets/edit-button-svgrepo-com(2).svg" Width="20" Height="20"/> 
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Date: " VerticalAlignment="Center" />
                    <CalendarDatePicker SelectedDate="{Binding CurrentDate, Mode=TwoWay}" CustomDateFormatString="MMMM dd, yyyy">
                        <Interaction.Behaviors>
                            <EventTriggerBehavior EventName="SelectedDateChanged">
                                <InvokeCommandAction Command="{Binding SelectedDateChangedCommand}" />
                            </EventTriggerBehavior>
                        </Interaction.Behaviors>
                    </CalendarDatePicker>
                </StackPanel>
            </Grid>
        </Border>
        
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Readings}"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  IsReadOnly="{Binding EditModeEnabled}"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  RowBackground="Transparent"
                  PointerPressed="DataGridPointerPressed"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="180" />
                
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*" MinWidth="100" />
                
                <DataGridTextColumn Header="pH" Binding="{Binding PH}" Width="80" />
                
                <DataGridTextColumn Header="Conductivity (ÂµS/cm)" Binding="{Binding Conductivity}" Width="120" />
                
                <DataGridTextColumn Header="Turbidity (NTU)" Binding="{Binding Turbidity}" Width="110" />
                
                <DataGridTextColumn Header="Chlorine Residual (mg/L)" Binding="{Binding ChlorineResidual}" Width="150" />
                
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" MinWidth="150" />
            </DataGrid.Columns>
        </DataGrid>
        

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Spacing="10">
            <Button Content="Add Row" Command="{Binding AddBlankReadingRowCommand}" />
            <Button Content="Save All Readings" Command="{Binding SaveReadingsCommand}" />
            <Button Content="Load All Current Day Readings" Command="{Binding LoadCurrentDateReadingsCommand}" />
            <Button Content="Load All Readings" Command="{Binding LoadAllReadingsCommand}" />
        </StackPanel>
    </Grid>
    
</UserControl>
